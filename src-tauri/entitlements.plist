<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Allow JIT compilation (needed for terminal emulation) -->
    <key>com.apple.security.cs.allow-jit</key>
    <true/>

    <!-- Allow unsigned executable memory (needed for PTY) -->
    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <true/>

    <!-- Disable library validation (needed for plugins) -->
    <key>com.apple.security.cs.disable-library-validation</key>
    <true/>

    <!-- Allow Apple Events (for shell integration) -->
    <key>com.apple.security.automation.apple-events</key>
    <true/>

    <!-- Network access (for Ollama AI) -->
    <key>com.apple.security.network.client</key>
    <true/>

    <!-- File access for working directories -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>
</dict>
</plist>
